<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="/css/admin_style.css">
    {{> head}}
</head>

<body>
    {{> admin_menu}}
    
    <div class="maincontent">      {{!-- without this class, content and side nav bar will overlap --}}
    {{> menu}}

    {{!-- Create New Event Form Popup --}}
    <div>
        <h1>
            <span>{{heading}}</span>
            <button class="add_event_button" type="button" data-toggle="modal" data-target="#createEventForm">Add New Event</button>
        </h1>
    </div>
    <div class="modal fade" id="createEventForm" tabindex="-1" role="dialog" aria-labelledby="createEventFormLabel" aria-hidden="true">
        <form method="post" action="/newEvent" id="event_form">
            <div id="createEvent" class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Create New Event</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label data-error="wrong" data-success="right" for="eventForm-name">Event Name</label>
                            <input type="text" class="form-control validate" name="name">
                        </div>
                        <div class="form-group">
                            <label data-error="wrong" data-success="right" for="eventForm-date">Event Date</label>
                            <input type="date" class="form-control validate" name="date">
                        </div>
                        <div class="form-group">
                            <label data-error="wrong" data-success="right" for="eventForm-description">Event Description</label>
                            <textarea class="form-control" rows="3" name="desc"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-deep-orange">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="jumbotron">
        <table class="event_table">
            <tr>
                <th class="event_text">Event Name</th>
                <th class="event_text">Event Description</th>
                <th class="event_text">Date</th>
                <th class="event_text"></th>
            </tr>

            {{#each event}}
            <tr>
                <td class="event_text"><a class="event_link" href="/admin/events/{{event_uuid}}">{{eventName}}</a></td>
                <td class="event_text"><a class="event_link" href="/admin/events/{{event_uuid}}">{{eventDescription}}</a></td>
                <td class="event_text"><a class="event_link" href="/admin/events/{{event_uuid}}">{{eventDate}}</a></td>
                <td class="event_text">
                    <button class="edit_event_button" type="button" data-toggle="modal" data-target="#editEventForm">Edit</button>
                    <div class="modal fade" id="editEventForm" tabindex="-1" role="dialog" aria-labelledby="editEventFormLabel" aria-hidden="true">
                        <form method="post" action="/editEvent" id="editevent_form">
                            <div id="editEvent" class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header text-center">
                                        <h4 class="modal-title w-100 font-weight-bold">Edit Event</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label data-error="wrong" data-success="right" for="eventForm-name">Event Name</label>
                                            <input type="text" class="form-control validate" name="name" value="{{name}}">
                                        </div>
                                        <div class="form-group">
                                            <label data-error="wrong" data-success="right" for="eventForm-date">Event Date</label>
                                            <input type="date" class="form-control validate" name="date" value={{date}}>
                                        </div>
                                        <div class="form-group">
                                            <label data-error="wrong" data-success="right" for="eventForm-description">Event
                                                Description</label>
                                            <textarea class="form-control" rows="3" name="desc">{{desc}}</textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <button class="btn btn-deep-orange">Confirm</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                <td class="event_text">
                    <form method="post" action="/deleteEvent">
                        <input type="hidden" name="event_uuid" value="{{event_uuid}}">
                        <input type="submit" class="delete_event_button" value="Delete">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
    </div>

</body>

</html>